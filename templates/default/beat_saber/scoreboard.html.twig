{% extends 'base.html.twig' %}

{% block title %}Czechsaber | Scoreboard{% endblock %}

{% block meta %}{% endblock %}

{% block header %}{% endblock %}

{% block sidebar %}
    {% embed "default/utilities/sidebar.html.twig" %}

    {% endembed %}
{% endblock %}

{% block navbar %}
    {% embed "default/utilities/navbar.html.twig" %}{% endembed %}
{% endblock %}

{% block body %}
<div class="scoreboard-wrapper">
    <div class="full-screen-video-container" style="overflow: visible;">
        <canvas id=c class="particles-canvas" style="min-height: 800px; height: 100%"></canvas>
        <img draggable="false" class="hp-image" src="{{ asset('build/images/assets/alienware-grafika-background.jpg') }}" loading="lazy" style="border-bottom: none;">
        <div class="update-scoreboard">
            <span class="scoreboard-container">
                {{ include('default/beat_saber/scoreboard_data.html.twig') }}
            </span>
        </div>
    </div>
</div>
{% endblock %}

{% block footer %}{% endblock %}